    action IsSupportedFile(File file) returns boolean
        text extension = file:GetFileExtension()
        if extension = "quorum"
            return true
        elseif extension = "qs"
            return true
        elseif extension = "csv"
            return true
        else
            //other supported extensions would be here
        end
        return false
    end

